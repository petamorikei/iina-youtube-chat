{
  "name": "iina-youtube-chat",
  "identifier": "com.petamorikei.iina-youtube-chat",
  "version": "0.1.0",
  "ghRepo": "petamorikei/iina-youtube-chat",
  "ghVersion": 1,
  "author": {
    "name": "petamorikei"
  },
  "description": "Display YouTube live chat synchronized with video playback",
  "entry": "dist/main.js",
  "permissions": ["file-system", "network-request"],
  "allowedDomains": ["*"],
  "sidebarTab": {
    "name": "Chat"
  },
  "preferencesPage": "dist/preferences.html",
  "preferenceDefaults": {
    "maxMessages": 200,
    "scrollDirection": "bottom-to-top",
    "showTimestamp": true,
    "showAuthorName": true,
    "showAuthorPhoto": true,
    "autoOpenChatWindow": true,
    "fontScale": 100
  }
}
