{
  "name": "YouTube Chat",
  "identifier": "com.petamorikei.youtube-chat",
  "version": "0.1.0",
  "author": {
    "name": "petamorikei"
  },
  "description": "Display YouTube live chat synchronized with video playback",
  "entry": "main.js",
  "permissions": ["file-system"],
  "allowedDomains": ["*"],
  "sidebarTab": {
    "name": "Chat"
  },
  "preferencesPage": "preferences.html",
  "preferenceDefaults": {
    "maxMessages": 200,
    "scrollDirection": "bottom-to-top",
    "showTimestamp": true,
    "showAuthorName": true,
    "showAuthorPhoto": true
  }
}
